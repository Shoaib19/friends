<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-floating mb-3">
    <%= f.email_field :email, autofocus: true,  id:"floatingInput",class:"form-control", placeholder:"aa" %>
     <%= f.label :email, for:"floatingInput" %><br />
  </div>

  <div class="field form-floating mb-3">
    <%= f.text_field :name, id:"floatingInput",class:"form-control", placeholder:"aa" %>
     <%= f.label :name, for:"floatingInput" %><br />
  </div>

  <div class="field form-floating mb-3">
    <%= f.password_field :password, id:"floatingInput",class:"form-control pass", placeholder:"aa", remote: true %>
     <%= f.label :password , for:"floatingInput" %>
    <% if @minimum_password_length %>
    <em class="error">*<%= @minimum_password_length %> characters minimum</em>
    <% end %><br />
  </div>

  <div class="field form-floating mb-3">
    <%= f.password_field :password_confirmation,  id:"floatingInput",class:"form-control" , placeholder:"aa"%>
    <%= f.label :password_confirmation , for:"floatingInput" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-outline-info" %>

    <%= render "devise/shared/links" %>
  </div>
<% end %>


