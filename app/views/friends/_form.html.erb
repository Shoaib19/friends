<%= form_for(friend) do |f| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% friend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= f.text_field :first_name , id:"floatingInput",class:"form-control", placeholder:"aa" %>
     <%= f.label :first_name, for:"floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.text_field :last_name , id:"floatingInput",class:"form-control", placeholder:"aa"%>
     <%= f.label :last_name, for:"floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.text_field :email , id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :email, for:"floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.text_field :phone , id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :phone, for:"floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.text_field :twitter , id:"floatingInput",class:"form-control", placeholder:"aa"%>
    <%= f.label :twitter, for:"floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.number_field :user_id , id:"floatingInput",class:"form-control", placeholder:"aa" , value: current_user.id , type: :hidden%>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
